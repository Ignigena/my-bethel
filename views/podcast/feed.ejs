  <title><%= podcast.name %></title>
  <link><% if (ministry.url) { %><%= ministry.url %><% } else { %>http://www.bethel.io/<% } %></link>
  <language>en-us</language>
  <copyright>&#169; <% if (podcast.owner) { %><%= podcast.owner %><% } else { %><%= ministry.name %><% } %></copyright>
  <description>
  <%= podcast.description %>
  </description>
  <generator>http://www.bethel.io</generator>
  <itunes:owner>
    <itunes:name><% if (podcast.owner) { %><%= podcast.owner %><% } else { %><%= ministry.name %><% } %></itunes:name>
    <itunes:email><%= ministry.email %></itunes:email>
  </itunes:owner>
  <itunes:summary>
  <%= podcast.description %>
  </itunes:summary>
  <itunes:author><% if (podcast.owner) { %><%= podcast.owner %><% } else { %><%= ministry.name %><% } %></itunes:author>
  <itunes:explicit>no</itunes:explicit>
  <itunes:image href="https://images.bethel.io/images/<% if (podcast.image) { %><%= podcast.image %><% } else { %>DefaultPodcaster.png<% } %>?crop=faces&amp;fit=crop&amp;w=1400&amp;h=1400"/>
  <itunes:keywords><% if (podcast.tags) { %><%= podcast.tags %><% } %></itunes:keywords>
  <itunes:category text="Religion &amp; Spirituality">
    <itunes:category text="Christianity"/>
  </itunes:category>
  <itunes:new-feed-url>http://podcast.bethel.io/<%= podcast.id %>.xml</itunes:new-feed-url>
  <atom:link href="https://my.bethel.io/podcast/feed/<%= podcast.id %>" rel="self" type="application/rss+xml"/>
  <% _.each(podcastMedia, function(media) { if (media.url) { %>
  <item>
    <title><% if (media.name) { %><%= media.name %><% } else { var filename = media.url.split('/') %><%= filename[filename.length-1] %><% } %></title>
    <pubDate><%= media.date.toUTCString() %></pubDate>
    <guid isPermaLink="false"><%= media.url %></guid>
    <itunes:author><%= ministry.name %></itunes:author><% if (media.description) { %>
    <description>
      <%= media.description %>
    </description><% } %><% if (media.duration) { %>
    <itunes:duration><%= media.duration %></itunes:duration><% } %>
    <enclosure url="<%= media.url %>" length="<% if (media.size) { %><%= media.size %><% } else { %>0<% } %>" type="<%= PodcastHelper.mimeTypeFromUrl(media.url) %>"/>
    <itunes:explicit>no</itunes:explicit>
    <itunes:block>no</itunes:block>
  </item>
  <% }}) %>