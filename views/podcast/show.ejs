<div class="dash-panel-left">
  <h1><%= podcast.name %></h1>
  <p><%= podcast.description %></p>
  <p class="text-muted"><%= podcast.copyright %></p>
  <div class="panel panel-default panel-top">
    <div class="panel-heading">
      <h3 class="panel-title"><%= podcastMedia.length %> Podcast Episodes</h3><% if (podcast.type == 1 && podcast.s3form) { %>
      <form action="<%= podcast.s3form.action %>" method="post" enctype="multipart/form-data" id="file_upload">
        <input type="hidden" name="key" value="<%= podcast.s3form.bucket %>/${filename}" />
        <input type="hidden" name="AWSAccessKeyId" value="<%= podcast.s3form.key %>" />
        <input type="hidden" name="acl" value="public-read" />
        <input type="hidden" name="policy" value="<%= podcast.s3form.policy %>" />
        <input type="hidden" name="success_action_status" value="201" />
        <input type="hidden" name="signature" value="<%= podcast.s3form.signature %>" />
        <div id="file-upload">
          <div id="dropzone">
            <span class="btn btn-sm btn-success fileinput-button">
              <i class="glyphicon glyphicon-plus"></i>
              <span>Upload new episode...</span>
              <input id="fileupload" type="file" name="file" />
            </span>
            <div class="progress progress-striped active" style="display: none;">
              <div class="progress-bar" role="progressbar" style="width: 100%;">Uploading...</div>
            </div>
          </div>
        </div>
      </form><% } %>
    </div>
    <div class="panel-body podcast">
      <table class="table table-hover podcast-media"<% if (ministry.url) { %> data-url="<%= ministry.url %>"<% } %>>
        <tbody>
          <% _.each(podcastMedia, function(media) { %>
          <tr data-id="<%= media.id %>"<% if (!media.name || !media.description || !media.url) { %> class="warning"<% } %>>
            <td>
              <% if (media.thumbnail) { %><img class="media-object pull-left" src="<%= media.thumbnail %>" width="100" /><% } %><h4 value="<% if (media.name) { %><%= media.name %><% } else { var filename = media.url.split('/') %><%= filename[filename.length-1] %><% } %>"><% if (media.name) { %><%= media.name %><% } else { var filename = media.url.split('/') %><%= filename[filename.length-1] %><% } %></h4>
              <small class="text-muted"><% if (media.date) { %><%= media.date.toDateString() %><% } %></small>
            </td>
            <td class="operations"><button class="btn btn-sm btn-default media-edit-button" data-source="<%= media.id %>">Edit</button></td>
          </tr>
          <tr class="podcast-media-edit">
            <td colspan="2">
              <!-- Loaded via AJAX //-->
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="dash-panel-right"><% if (podcast.statisticsGraph) { %>
  <div id="podcastVisits" data-visits="<%= podcast.statisticsGraph %>"></div><% } %>
  <div id="actions" class="actions-top">
    <a href="/podcast/edit/<%= podcast.id %>" class="btn btn-block btn-default">Edit Podcast</a>
    <a href="/podcast/feed/<%= podcast.id %>" type="submit" class="btn btn-block btn-primary">View Podcast</a>
  </div>
  <img class="thumbnail-sidebar" typeof="foaf:Image" src="http://cdn.bethel.io/400x400/<% if (podcast.image) { %><%= podcast.image %><% } else { %>DefaultPodcaster.png<% } %>" alt="">
</div>
