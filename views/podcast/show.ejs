<div class="dash-panel-left">
  <h1><%= podcast.name %></h1>
  <p><%= podcast.description %></p>
  <p class="text-muted"><%= podcast.copyright %></p>
  <div class="panel panel-default panel-top">
    <div class="panel-heading">
      <h3 class="panel-title">Podcast Episodes</h3>
    </div>
    <div class="panel-body">
      <table class="table table-hover podcast-media">
        <tbody>
          <% _.each(podcastMedia, function(media) { %>
          <tr<% if (!media.name || !media.description) { %> class="warning"<% } %>>
            <td>
              <h4><% if (media.name) { %><%= media.name %><% } else { var filename = media.url.split('/') %><%= filename[filename.length-1] %><% } %></h4>
              <small class="text-muted"><%= media.date.toDateString() %></small>
            </td>
            <td class="operations"><button class="btn btn-sm btn-default media-edit-button">Edit</button></td>
          </tr>
          <tr class="podcast-media-edit">
            <td colspan="2">
              <form class="form-horizontal" role="form" action="/podcastmedia/update/<%= podcast.id %>" method="post" accept-charset="UTF-8">
                <div class="form-group">
                  <label for="episodeTitle" class="col-sm-3 control-label">Episode</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="name" id="episodeTitle" placeholder="Episode Title" value="<% if (media.name) { %><%= media.name %><% } else { var filename = media.url.split('/') %><%= filename[filename.length-1] %><% } %>" />
                  </div>
                </div>
                <div class="form-group">
                  <label for="episodeDate" class="col-sm-3 control-label">Published</label>
                  <div class="col-sm-9">
                    <div class="input-group">
                      <input type="date" id="episodeDate" class="form-control episode-date" value="<%= media.date.getMonth() + 1 %>-<%= media.date.getDate() %>-<%= media.date.getFullYear() %>" />
                      <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="episodeDescription" class="col-sm-3 control-label">Description</label>
                  <div class="col-sm-9">
                    <textarea class="form-control" name="description" rows="2" id="episodeDescription" placeholder="A few sentences describing your podcast episode that will appear in iTunes."><% if (media.description) { %><%= media.description %><% } %></textarea>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-3 col-sm-9 text-right">
                    <button type="delete" class="btn btn-sm btn-danger">Delete</button>
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                  </div>
                </div>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="dash-panel-right">
  <div id="actions" class="actions-top">
    <a href="/podcast/edit/<%= podcast.id %>" class="btn btn-block btn-default">Edit Podcast</a>
    <button type="submit" class="btn btn-block btn-primary">View Podcast</button>
  </div>
  <img class="thumbnail-sidebar" typeof="foaf:Image" src="http://cdn.bethel.io/400x400/<% if (podcast.image) { %><%= podcast.image %><% } else { %>DefaultPodcaster.png<% } %>" alt="">
</div>
