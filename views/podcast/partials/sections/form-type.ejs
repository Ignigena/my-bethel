<div class="form-group">
  <label class="col-sm-3 control-label">Type</label>
  <div class="col-sm-9">
    <label class="radio-inline">
      <input type="radio" name="type" value="1"<% if (typeof podcast == 'undefined' || (typeof podcast != 'undefined' && podcast.type == 1)) { %> checked<% } %>> Audio
    </label>
    <label class="radio-inline">
      <input type="radio" name="type" value="2"<% if (typeof podcast != 'undefined' && podcast.type == 2) { %> checked<% } %>> Video
    </label>
  </div>
</div>
<div class="form-group">
  <label for="podcastDescription" class="col-sm-3 control-label">Hosting</label>
  <div class="col-sm-9">
    <div class="radio">
      <label>
        <input type="radio" name="source" id="optionsRadios1" value="1"<% if (typeof podcast == 'undefined' || (typeof podcast != 'undefined' && podcast.type == 1)) { %> checked<% } %>>
        Bethel Cloud Storage
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="source" id="optionsRadios2" value="2"<% if (typeof podcast != 'undefined' && podcast.type == 2) { %> checked<% } %>>
        Vimeo Pro
      </label>
    </div>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label"></label>
  <div class="col-sm-9">
    <input type="text" class="form-control" name="sourceKey" placeholder="Vimeo username" <% if (typeof podcast != 'undefined') { %> value="<%= podcast.sourceKey %>"<% } %> />
  </div>
</div>
