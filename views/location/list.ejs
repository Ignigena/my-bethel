<div class="dash-panel-full">
  <h1>Locations <a href="/location/new" class="btn btn-sm btn-success" data-link="popover"><span class="glyphicon glyphicon-plus"></span> Add Location</a></h1>
  <div class="locations row">
  <% _.each(locations, function(location) { %>
      <div class="col-sm-4">
        <div class="thumbnail">
          <div class="btn-group">
            <a href="/location/edit/<%= location.id %>" type="button" class="btn btn-sm btn-default" data-link="popover"><span class="glyphicon glyphicon-pencil"></span></a>
            <a href="/location/delete/<%= location.id %>" type="button" class="btn btn-sm btn-danger" data-link="popover"><span class="glyphicon glyphicon-ban-circle"></span></a>
          </div>
          <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= location.loc[1] %>,<%= location.loc[0] %>&zoom=15&size=300x150&maptype=roadmap&markers=color:0x1591b5%7C<%= location.loc[1] %>,<%= location.loc[0] %>&sensor=false&key=AIzaSyCasoNnO-7ZHrH_NBcCU_BBed6duq8NvJg" alt="<%= location.address %>">
          <div class="caption">
            <h3><%= location.name %></h3>
            <small class="text-muted"><%= location.address.split(', ').slice(0, -2).join(', ') %></small>
          </div>
        </div>
      </div>
  <% }) %>
  </div>
</div>
