<html lang="en" ng-app="Bethel" ng-controller="AppCtrl">
<head>
  <meta charset="utf-8" />
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge" /><![endif]-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bethel</title>
  <!--STYLES-->
  <link rel="stylesheet" href="/components/animate.css/animate.min.css">
  <link rel="stylesheet" href="/components/angular-material/angular-material.min.css">
  <link rel="stylesheet" href="/components/angular-chart.js/dist/angular-chart.css">
  <link rel="stylesheet" href="/styles/app.css">
  <!--STYLES END-->
