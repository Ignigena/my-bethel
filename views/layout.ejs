    <script src="/js/socket.io.js"></script>
    <script src="/js/angular-sails.io.js"></script>
    <script src="/js/lodash.min.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/jquery.fileupload.js"></script>
    <script src="/js/jquery.form.js"></script>
    <script src="/js/jquery.iframe-transport.js"></script>
    <script src="/js/jquery.sparkline.js"></script>
    <script src="/js/jquery.typeahead.js"></script>
    <script src="/js/jquery.validate.js"></script>
    <script src="/js/angular-google-maps.js"></script>
    <script src="/js/bootstrap-datepicker.js"></script>
    <script src="/js/bootstrap-markdown.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/color-thief.js"></script>
    <script src="/js/controllers/appController.js"></script>
    <script src="/js/controllers/dashboard/dashboardController.js"></script>
    <script src="/js/controllers/dashboard/locationController.js"></script>
    <script src="/js/controllers/teamController.js"></script>
    <script src="/js/markdown.js"></script>
    <script src="/js/podcast.js"></script>
    <script src="/js/services/sailsSocket.js"></script>
