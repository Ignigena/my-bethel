<body layout="row">
  <md-sidenav class="md-sidenav-left md-whiteframe-z2" layout="column" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')" ng-cloak ng-if="user" layout-fill>
    <md-toolbar class="md-hue-2">
      <h1 class="md-toolbar-tools">Bethel</h1>
    </md-toolbar>

    <md-content flex>
      <md-list class="md-accent md-hue-3">
        <md-list-item ng-repeat="link in navLinks" ng-click="nav(link.url)" ng-cloak>
          <md-icon>{{ link.icon }}</md-icon>
          <p>{{ link.title }}</p>
        </md-list-item>
      </md-list>
    </md-content>
  </md-sidenav>

  <div class="main-content" flex layout="column" ng-if="user" ui-view>
    <!--ANGULAR VIEW-->
  </div>

  <%- body %>

  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js"></script>
